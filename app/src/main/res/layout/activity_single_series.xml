<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SingleSeries">

    <TextView
            android:text="@string/series_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/serieName" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/singleSerieImage"/>
    <TextView
            android:text="@string/series_description"
            android:layout_width="379dp"
            android:layout_height="179dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/singleSerieDescription" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/singleSerieImage"/>
    <ImageView
            android:layout_width="299dp"
            android:layout_height="248dp" app:srcCompat="@android:drawable/alert_light_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/singleSerieImage" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/singleSerieDescription" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/serieName"/>
</android.support.constraint.ConstraintLayout>