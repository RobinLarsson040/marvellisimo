<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SingleCharacter">

    <TextView
            android:text="@string/character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/charName" android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"/>
    <TextView
            android:text="@string/description"
            android:layout_width="248dp"
            android:layout_height="153dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/singleDescription" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="309dp"
            android:layout_height="207dp" app:srcCompat="@android:drawable/alert_light_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/singleImage" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/singleDescription" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/charName"/>
</android.support.constraint.ConstraintLayout>