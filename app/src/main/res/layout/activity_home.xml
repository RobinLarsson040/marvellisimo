<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAllCaps="false"
            android:textColor="@android:color/holo_red_dark" android:textSize="20sp"/>
    <Button
            android:text="Online Users"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:id="@+id/usersButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:onClick="onlineUsers" android:layout_marginBottom="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:onClick="logout"/>
    <Button
            android:text="JonasTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/jonasButton" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="jonasTest"
            android:layout_marginBottom="44dp"/>
    <Button
            android:text="JONASTEST2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jonasButton2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/jonasButton" android:layout_marginStart="8dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.56" android:onClick="jonasTest2"/>
</android.support.constraint.ConstraintLayout>